<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_details"
        android:layout_gravity="center"
        android:id="@+id/flags_tx"
        android:text="@string/text_flags"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_details"
        android:layout_gravity="center"
        android:id="@+id/power_tx"
        android:text="@string/text_power"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_details"
        android:layout_gravity="center"
        android:id="@+id/url_tx"
        android:text="@string/text_url"/>
    <ImageView
        android:id="@+id/image_tx"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>