<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".LaunchActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_simple_up_button"
        android:id="@+id/simple_up_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:onClick="onLaunchSimpleUpActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_android_version_button"
        android:id="@+id/android_version_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_below="@id/simple_up_button"
        android:onClick="onLaunchAndroidVersionActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_map_fragment_button"
        android:id="@+id/android_map_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_below="@id/android_version_button"
        android:onClick="onLaunchMapFragmentActivity"/>

</RelativeLayout>
