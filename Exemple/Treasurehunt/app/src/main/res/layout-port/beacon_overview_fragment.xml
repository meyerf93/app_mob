<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_b"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map">
    <LinearLayout
        android:id="@+id/main_lin_lay_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_lay1_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/beacon_1"
                android:layout_width="@dimen/circle_btn_size_port"
                android:layout_height="@dimen/circle_btn_size_port"
                android:background="@drawable/btn_main_screen"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/overview_beacon_fragment_margin"
                android:layout_weight="0.33"
                android:text="@string/overview_beacon_frag_1_text"/>
            <Button
                android:id="@+id/beacon_2"
                android:layout_width="@dimen/circle_btn_size_port"
                android:layout_height="@dimen/circle_btn_size_port"
                android:background="@drawable/btn_main_screen"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/overview_beacon_fragment_margin"
                android:layout_weight="0.33"
                android:text="@string/overview_beacon_frag_2_text"/>
            <Button
                android:id="@+id/beacon_3"
                android:layout_width="@dimen/circle_btn_size_port"
                android:layout_height="@dimen/circle_btn_size_port"
                android:background="@drawable/btn_main_screen"
                android:gravity="center"
                android:layout_margin="@dimen/overview_beacon_fragment_margin"
                android:layout_weight="0.33"
                android:text="@string/overview_beacon_frag_3_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_lay2_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/beacon_4"
                android:layout_width="@dimen/circle_btn_size_port"
                android:layout_height="@dimen/circle_btn_size_port"
                android:background="@drawable/btn_main_screen"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/overview_beacon_fragment_margin"
                android:layout_weight="0.33"
                android:text="@string/overview_beacon_frag_4_text"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>